    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "chalk": "^5.4.1",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-emoji-conventional": "^1.1.0",
