{
  "name": "doctrinaire",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "help": "bun ./src/utils/run-help.ts",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "info": "next info",
