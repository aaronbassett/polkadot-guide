    "format:fix": "biome format --write",
    "check": "biome check",
    "check:changed": "biome check --changed --no-errors-on-unmatched",
    "check:staged": "biome check --staged --no-errors-on-unmatched",
    "check:fix": "biome check --fix",
    "check:changed:fix": "biome check --changed --no-errors-on-unmatched --fix",
    "check:staged:fix": "biome check --staged --no-errors-on-unmatched --fix"
